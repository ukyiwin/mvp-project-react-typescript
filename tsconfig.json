{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "esnext", "dom", "es6", "esnext.asynciterable"
    ],
    "baseUrl": "./src",
    "paths": {
        "@": ["src"],
        "Components": ["./src/Components"],
        "Containers": ["./src/Components/Containers"],
        "Assets": ["./src/Assets"],
        "ReduxApp": ["./src/Redux"],
        "Theme": ["./src/Theme"],
        "Utils": ["./src/Utils"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "server",
    "jest",
    "src/setupTests.ts"
  ]
}
